<meta name="viewport" content="main, width=device-width, initial-scale=1">
link(href="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css", rel="stylesheet")
script(src="https://code.jquery.com/jquery-1.11.3.min.js")
script(src="https://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js")
script(src="javascripts/jquery.tablesorter/jquery.tablesorter.min.js")
h1= title
style.
  th {
      border-bottom: 1px solid #d6d6d6,
      cursor: pointer,
      cursor: hand
  }
  tr:nth-child(even) {
      background: #e9e9e9;
  }
div(data-role="main").ui-content
form
    input#filterTable-input(data-type="search", laceholder="Search...")
table#keywords.ui-responsive.ui-shadow.tablesorter(data-role="table", data-mode="columntoggle", data-filter="true", data-input="#filterTable-input")
    thead
      tr
        th(data-priority="1") Symbol
        th(data-priority="2") CompanyName
        th(data-priority="3") CurrentPrice
        th(data-priority="4") PE
        th(data-priority="5") PB
        th(data-priority="6") lastUpdatedTime
    tbody    
      each stock, i in stocks
        tr
            td #[a(href='http://finance.sina.com.cn/realstock/company/' + stock._id + '/nc.shtml') #{stock._id}]
            td #{stock.companyname}
            td #{stock.currentPrice}
            td #{stock.price2EarningRatio}
            td #{stock.price2BookRatio}
            td #{stock.lastUpdatedTime}

script.
  $(document).ready(function() { 
    $('#keywords').tablesorter();
  });
